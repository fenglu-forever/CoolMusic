<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_music_detail_play_mode_sequence" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/btnPrevious"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_music_detail_previous" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/btnPlayOrPause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_music_detail_pause" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_music_detail_next" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_music_detail_music_list" />
</LinearLayout>
